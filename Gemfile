source "https://rubygems.org"

# Use an older version of Jekyll that supports redcarpet and pygments
gem "jekyll", "~> 3.9"
gem "webrick", "~> 1.8"

# Markdown and Highlighter Gems from your template
gem "redcarpet"
gem "pygments.rb"

# Older pagination gem
gem "jekyll-paginate"

# The following gems are needed to fix errors and warnings with modern Ruby
gem "logger"
gem "base64"
gem "bigdecimal"

# The following gem is needed to fix the "Unknown tag 'gist'" error
gem "jekyll-gist"